<div class="info-container">
  <div class="mb-5 p-3 mt-3 w-100 d-flex flex-column">
    <div class="title mt-auto p-2 d-flex align-items-center">
      <div class="d-flex align-items-center gap-3">
        <h1><%= @list.name %></h1>
        <%= @bookmarks.length %> film(s) ajouté(s)
      </div>
      <div>
        <%= link_to "Ajoutez un film", new_list_bookmark_path(@list), class: "btn btn-primary" %>
        <%= link_to 'Retour', lists_path, class: 'btn btn-secondary' %>
      </div>
    </div>

    <% if @bookmarks.length === 0 %>
      <div class="d-flex justify-content-center mt-4">
        <h3 style="color: white;">Il n'y a aucun film dans votre liste !</h3>
      </div>
    <% else %>
      <div class="d-flex flex-wrap justify-content-center gap-2">
        <% @bookmarks.each do |bookmark| %>
          <div class="card custom-card mt-3">
            <img src="<%= bookmark.movie.poster_url %>" alt="Image">
            <div class="card-body">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <p class="card-text overview"><%= bookmark.movie.overview %></p>
              <p class="card-text rating">Note/ <%= bookmark.movie.rating %></p>
              <p class="card-text"><i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %></p>
              <%= link_to bookmark_path(bookmark), class: "", data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer ?" } do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
