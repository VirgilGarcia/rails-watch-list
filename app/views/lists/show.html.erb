<div class="info-container">
  <div class="mb-5 p-3 mt-3 w-100 d-flex flex-column">
    <div class="title mt-auto">
      <h1><%= @list.name %></h1>
      <div>
        <%= link_to "Ajoutez un commentaire", new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>
        <%= link_to 'Retour', lists_path, class: 'btn btn-secondary mt-3' %>
      </div>
    </div>

    <div class="d-flex flex-wrap justify-content-center gap-3">
      <% @bookmarks.each do |bookmark| %>
        <div class="card custom-card mt-3">
          <img src="<%= bookmark.movie.poster_url %>" alt="Image">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text overview"><%= bookmark.movie.overview %></p>
            <p class="card-text rating">Note/ <%= bookmark.movie.rating %></p>
            <p class="card-text"><i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %></p>
            <%= link_to 'Supprimer', bookmark_path(bookmark), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Confirmer la suppression ?' } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
